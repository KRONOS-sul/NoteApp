<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/background"
        android:elevation="4dp"
        app:cardCornerRadius="16sp">

        <TextView
            android:id="@+id/item_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="Применение текстов" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_tv_date"
         android:layout_margin="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="26 июня \n 12:56"
        android:layout_alignTop="@id/item_cv"
        android:layout_alignEnd="@id/item_cv"
        android:layout_alignBottom="@id/item_cv"
        android:elevation="4dp"
        android:textColor="@color/gray"
        android:textSize="12sp" />

</RelativeLayout>